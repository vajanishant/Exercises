extends base.pug

block content
    form(action=`/items/${user.id}?_method=PATCH` method="POST")
        input(type="text", name="itemName" value=`${user.itemName}`)
        input(type="number", name="itemPrice" value=`${user.itemPrice}`)
        input(type="submit", value="Submit!")
    form(action=`/items/${user.id}?_method=DELETE` method="POST")
        input(type="submit", value="X")